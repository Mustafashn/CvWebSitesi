@{
    Layout = "_AdminLayout";
}
@model List<Contact>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        @if(Model.Count >0) {
                            <div class="timeline timeline-inverse">
                                <div class="tab-pane" id="timeline">
                                    @foreach(var contact in Model) {
                                        <div class="timeline timeline-inverse">
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)contact.ContactDate).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div>
                                    <div>
                                        <i class="fas fa-comments bg-success"></i>
                                        <div class="timeline-item">
                                            <span class="time"><i class="fas fa-book"></i> @contact.ContactMail</span>
                                            <h3 class="timeline-header"><a href="#">@contact.ContactName</a> @contact.ContactSubject</h3>
                                            <div class="timeline-body">
                                                @contact.ContactMessage
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        }
                        else {
                            <div class="alert">
                                <h3>No Messages</h3>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
