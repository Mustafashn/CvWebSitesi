@{
    Layout="_AdminLayout";
}
@model InterestModel
<br>
<div class="container">
    <h2>Edit Interest</h2>
    <form asp-controller="Admin" asp-action="InterestEdit" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" name="InterestId" value="@Model.InterestId">
        <label asp-for="Description"></label>
        <textarea rows="15" asp-for="Description" class="form-control"> </textarea>

        <button class="btn btn-primary mt-2" type="submit">Edit</button>
    </form>
</div>