@{
    Layout="_AdminLayout";
}
@model InterestModel
<br>
<div class="container">
    <h2>Add Interest</h2>
    <form asp-controller="Admin" asp-action="InterestAdd" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="Description"></label>
        <textarea rows="15" asp-for="Description" class="form-control"> </textarea>

        <button class="btn btn-success mt-2" type="submit">Add</button>
    </form>
</div>