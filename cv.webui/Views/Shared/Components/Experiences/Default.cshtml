@model List<Experience>
<section class="resume-section" id="experience">
    <div class="resume-section-content">
        <h2 class="mb-5">Experience</h2>
        @if(Model.Count() == 0){
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <p>I have no job experience. I am open to opportunities.</p>
            </div>
        }
        else {
            @foreach (var experience in Model){
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">@experience.Title</h3>
                    <div class="subheading mb-3">@experience.SubTitle</div>
                    <p>@experience.Description</p>
                </div>
                <div class="flex-shrink-0"><span class="text-primary">@(((DateTime)experience.FirstDate).ToString("dd-MMM-yyyy")) / @(((DateTime)experience.LastDate).ToString("dd-MMM-yyyy"))</span></div>
            </div>
            }
        }
    </div>
</section>